# PDF-YAML Pipeline Configuration
# 이 파일을 .env로 복사하여 사용하세요

# ===========================================
# 워커 설정 (Worker Configuration)
# ===========================================
# 워커 수: 1개만 사용하려면 기본값, 2개 사용하려면 아래 명령어 실행
#   docker compose --profile scale up -d
#
# 워커당 스레드 수 (CPU 코어 수에 맞게 조절)
THREADS_PER_WORKER=2

# 워커당 메모리 제한 (8G, 12G, 16G 등)
WORKER_MEMORY=8G

# ===========================================
# 데이터 경로 (Data Paths)
# ===========================================
DATA_PATH=./data
OUTPUT_PATH=./data/output

# ===========================================
# GPU 설정 (GPU Settings)
# ===========================================
# GPU 번호 (0, 1, 2... 또는 "0,1"로 여러개)
CUDA_VISIBLE_DEVICES=0

# cuda = GPU 사용 / cpu = CPU만 사용 (GPU 없을 때)
PIPELINE_DEVICE=cuda

# ===========================================
# Redis 설정
# ===========================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# ===========================================
# 처리 설정 (Processing)
# ===========================================
LOG_LEVEL=INFO
SAFE_MODE=true
TIMEOUT=600
MAX_RETRIES=1

# PDF 최대 페이지 수 (메모리 부족 시 줄이세요)
MAX_PDF_PAGES=100

OCR_ENABLED=false

# ===========================================
# 알림 설정 (선택사항)
# ===========================================
TELEGRAM_ENABLED=false
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
